generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id            String     @id @default(uuid())

  name          String
  description   String?
  email         String     @unique
  CNPJ          String     @unique
  password      String 

  verification  Boolean    @default(false)
  createAt      DateTime   @default(now())
  updateAt      DateTime   @updatedAt

  otps          OTP[] 

  faqs FAQ[]

  inter Interaction[]
}

model OTP {
  id        String    @id @default(uuid())
  code      String
  companyId String
  expiredAt DateTime
  used      Boolean   @default(false)

  company   Company   @relation(fields: [companyId], references: [id])
}

model FAQ {
  id            String       @id @default(uuid())
  question      String
  answer        String
  companyId     String
  createAt      DateTime   @default(now())
  updateAt      DateTime   @updatedAt

  company       Company    @relation(fields: [companyId], references: [id])
}

model Interaction {
  id        String    @id @default(uuid())
  question  String
  botAnswer String
  companyId String
  createAt  DateTime  @default(now())
  botOrFaq  Int       @default(1)     

  company   Company   @relation(fields: [companyId], references: [id])
}